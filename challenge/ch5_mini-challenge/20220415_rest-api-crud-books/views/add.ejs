<body>
    <%- include('partials/_sidebar.ejs') %>
        <%- include('partials/_navbar.ejs') %>
            <div class='container'>
                <h1 class='fw-bold'>ADD BOOK</h1>
                <form action='/admin/add' method='post' enctype='multipart/form-data'>
                    <div class='form-group mt-4'>
                        <label>Judul</label>
                        <input name='judul' class='form-control ' type='text'>
                    </div>
                    <div class='form-group mt-4'>
                        <label>Penulis</label>
                        <input name='penulis' class='form-control' type='text'>
                    </div>
                    <div class='form-group mt-4'>
                        <label>Tahun Terbit</label>
                        <input name='tahun' class='form-control' type='text'>
                    </div>

                    <div class='form-group mt-4'>
                        <div class='custom-file'>
                            <label class='custom-file-label' for='file'>Choose Images</label>
                            <input type='file' name='foto' class='custom-file-input' id='file'>
                        </div>
                    </div>
                    <input type='submit' name='submit' value='Add Book' style='float: right;' class='btn-md btn btn-success mt-3'>
                </form>
            </div>
</body>

