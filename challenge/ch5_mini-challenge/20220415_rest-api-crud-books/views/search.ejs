<!DOCTYPE html>
<html lang='en'>

<head>
    <meta charset='UTF-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <!-- Bootstrap -->
    <!-- <link rel='stylesheet' href='css/bootstrap.min.css' /> -->
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous'>
    <!-- Css -->
    <link rel='stylesheet' href='css/style.css'>
    <link rel='stylesheet' href='css/responsive.css'>
    <title></title>

    <style>
        .title-dashboard {
            position: absolute;
            top: 150px;
            left: 300px;
        }
        
        .btn-add {
            position: relative;
            top: 100px;
            left: 1100px;
        }
        
        .card {
            left: 160px;
            position: relative;
            top: 150px;
        }
    </style>
</head>

<body>
    <%- include('partials/_sidebar.ejs') %>
        <%- include('partials/_navbar.ejs') %>
            <div class='container'>
                <a href='/admin/add' class='btn-add btn btn-primary'>Add Book</a>
                <div class='container mt-4'>
                    <div id='cars-container'>
                        <% items.forEach((item)=> { %>
                            <% if(item){ %>
                                <div class='card p-2 mb-2 me-5 float-left' style='width: 18rem; object-fit: cover'>
                                    <img src='<%= item.foto %>' class='card-img-top'>
                                    <div class='card-body'>
                                        <h5 class='card-title'>
                                            <%= item.judul %>
                                        </h5>
                                        <p class='card-text'>
                                            <%= item.penulis %>
                                        </p>
                                        <p class='card-text'>
                                            <%= item.tahun %>
                                        </p>
                                        <div class='item-menu'>
                                            <a href='/admin/edit/<%= item.id %>' class='btn-edit btn btn-primary mr-1 float-left'>Edit</a>
                                            <form action='/admin/delete/<%= item.id %>' method='post'>
                                                <input type='submit' value='Delete' class='btn-edit btn btn-danger'>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                    </div>
                    <% } else { %>
                        <p>Data tidak ditemukan</p>
                        <% } %>
                            <% }) %>
                </div>
            </div>
            </div>
</body>

</html>